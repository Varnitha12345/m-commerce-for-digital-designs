<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/popular_img"
            android:layout_width="280dp"
            android:layout_height="190dp"
            app:riv_corner_radius="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/varan_logo_873x816"/>
        <TextView
            android:id="@+id/popular_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:text="Popular Designs"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/popular_des"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:text="description"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="-5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>

            </LinearLayout>

            <TextView
                android:id="@+id/popular_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/alice"
                android:text="5.0"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/popular_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/alice"
                android:text="Discount 20% off"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>