<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <ImageView
            android:id="@+id/recommended_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/varan_logo_873x816"/>
        <TextView
            android:id="@+id/recommended_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design Name"
            android:textSize="19sp"
            android:fontFamily="@font/alice"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recommended_description"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rating_star"/>

            </LinearLayout>

            <TextView
                android:id="@+id/recommended_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/alice"
                android:text="5.0"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recommend_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/alice"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>